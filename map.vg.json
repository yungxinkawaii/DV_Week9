{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Number of Chess Player by Country",
  "projection": { "type": "equalEarth" },
  "transform": [
    {
      "filter": { "field": "rating", "valid": true }
    },
    {
      "aggregate": [{ "op": "count", "as": "player_count" }],
      "groupby": ["country"]
    }
  ],
  "layer": [
    {
      "data": {
        "url": "ne.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
    },
    {
      "data": {
        "url": "C:/Users/User/Desktop/Monash/FIT-3179/Week9/fide_historical.csv"
      },
      "mark": {
        "type": "geoshape",
        "fill": "gray",
        "stroke": "white",
        "tooltip": { "content": "data" }
      },
      "encoding": {
        "color": {
          "field": "player_count",
          "type": "quantitative",
          "title": "Number of Chess Players",
          "scale": { "type": "linear", "scheme": "viridis" }
        },
        "tooltip": [
          { "field": "country_data.properties.ADMIN", "title": "Country" },
          { "field": "player_count", "title": "Number of Chess Players" }
        ]
      }
    }
  ]
}
